    <!--获取所有的商品分类信息用于页面展示-->
    <select id="getAllGroups" resultType="com.wxl.sms.bean.Group">
        select *
        from tb_group
    </select>

    <!--新增商品分类-->
    <insert id="addGroup">
        insert into tb_group(group_name)
        values (#{groupName})
    </insert>

    <!--修改商品分类信息-->
    <update id="updateGroup">
        update tb_group
        set group_name = #{groupName}
        where id = #{id}
    </update>

    <!--根据id删除商品分类信息-->
    <delete id="deleteGroupById">
        delete
        from tb_group
        where id = #{id}
    </delete>

